            a#downloadDrop.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
              i.fa.fa-cloud-download(style='color: white;')
              | Download
              b.caret
            ul.dropdown-menu
              li
                a(href='data/boroughs.geojson', download='boroughs.geojson', target='_blank', data-toggle='collapse', data-target='.navbar-collapse.in')
                  i.fa.fa-download
                  | Boroughs
